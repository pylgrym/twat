<% provide(:title, "Edit user (p376)") %>

<h1>Update your profile</h1>


<div class="container"> <!-- container takes off some margin for left+right side -->

  <div class="row"> <!-- row pulls out a full horizontal row-block of the 'meat' of our page. -->

  <!-- about centering forms in BS2/BS3:
   http://stackoverflow.com/questions/12172651/how-to-center-form-in-twitter-bootstrap
   -->

  <!-- BS2 used 'span6 offset3'. If you add 'style="background-color: pink;', you can see the layout. -->
  <div class="col-md-6 col-md-offset-3"">

    <!-- used 
    http://www.tutorialspoint.com/bootstrap/bootstrap_forms.htm
    to learn about form-group, form-horizontal,
    and col-sm-xxx diddley.
    --> 

    <!-- form-inline was a mistake.. -->
		<%= form_for(@user, html: {class: "form-horizontal"} ) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %> <!-- p465 updated -->

      <div class="form-group">
		    <%= f.label :name, class: "col-sm-2 control-label" %>   
        <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %> </div> </div>

      <div class="form-group">
		    <%= f.label :email, class: "col-sm-2 control-label" %> 
        <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %> </div> </div>

      <div class="form-group">
		    <%= f.label :password, class: "col-sm-2 control-label" %> 
        <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %> </div> </div>

      <div class="form-group">
		    <%= f.label :password_confirmation, "Confirm", class: "col-sm-2 control-label" %> 
        <div class="col-sm-10">
		    <%= f.password_field :password_confirmation, class: "form-control" %> </div> </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">        
		    <%= f.submit "Save changes", class: "btn btn-large btn-primary form-control" %>
        </div>
      </div>

    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>

  </div> <!-- span-crap -->
  </div> <!-- row -->
</div> <!-- container-->
